#include<iostream>
using namespace std;
int main()
{
int a[100],i,n,j,b,num;
   cout<<"Enter the size of the array";
   cin>>n;
   cout<<"Enter the  values in the array";
        for (i=0;i<n;i++)
        {
       cin>>a[i];
        }
    printf("Enter the number to delete");
    scanf("%d",&num);
        for(i=0;i<n;i++)
        {
        if(a[i]==num)
        j=i;
        }
         for(i=j;i<n;i++)
    {
        a[i]=a[i+1];
    }
    n=n-1;
    for(i=0;i<n;i++)
        {
        cout<<a[i]<<" ";
        }
}
